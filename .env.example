APP_ENV=dev
BACKEND_CORS_ORIGINS=http://localhost:5173
MEDIA_ROOT=media
MEDIA_BASE_URL=http://localhost:8000/media

OPENAI_API_KEY=sk-your-key-here
OPENAI_WHISPER_MODEL=whisper-1
OPENAI_RESPONSES_MODEL=gpt-4o-mini
OPENAI_TTS_MODEL=gpt-4o-mini-tts
OPENAI_VISION_MODEL=gpt-4o-mini
OPENAI_VOICE=alloy

# AI Vision Analysis Settings
# Set to false to disable AI vision (uses FFmpeg heuristics only)
AI_VISION_ENABLED=true
# Seconds between frame samples (lower = more accurate but more expensive)
AI_VISION_SAMPLE_INTERVAL=5.0
# Number of frames per API call (higher = fewer calls but larger payloads)
AI_VISION_BATCH_SIZE=10
# Maximum frames to analyze per video
AI_VISION_MAX_FRAMES=120

DATABASE_URL=sqlite:///./app.db
FFMPEG_BIN=ffmpeg
FFPROBE_BIN=ffprobe

JWT_SECRET=change-me
JWT_ALGORITHM=HS256
JWT_EXPIRES_MINUTES=60

CREDIT_COST_PER_MINUTE=1
CREDIT_COST_PER_EXPORT=1
